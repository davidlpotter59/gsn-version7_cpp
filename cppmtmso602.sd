%%
Screen
        Name            = "cppmtmso602" ;
        Type            = "Detail" ;
        Padcharacter    = Space ;
        Highlite        = Underscore ;
        Screensize      = "dynamic" ;
        Windowtitle = "%a     %s Coverage B Schedule of Rates    Ver 7.0 %m" ;
        Domain          = "cppfarmcovb" ;
        iconline        = 0;

        Global Unsigned Ascii Number G_policy_NO[9] ;
        Global Unsigned Ascii Number g_year[4] ;
        Global Unsigned Ascii Number g_end_sequence[4] ;
        Global Unsigned Ascii Number G_PREM_NO[4] ;
        Global Unsigned Ascii Number G_BUILD_NO[4] ;
        Global Unsigned Ascii Number G_STATE[2] ;
        Global Unsigned Ascii Number G_OPTION[1] ;
        Global Unsigned Ascii Number g_county[3] ;
        Global Unsigned Ascii Number g_deductible[5] ;
        Global Unsigned Ascii Number g_wind_deductible[5] ;

        Local Unsigned Ascii Number L_SUB_CODE[4]=0,
                                    L_PER[5]=0,
                                    l_premium[8]=0,
                                    l_limit[8]=0,
                                    l_zone[3]=0,
                                    l_deductible[5]=0,
                                    l_deductible_rate[6]=0/dec=4,
                                    l_protection_rate[4]=0/dec=3,
                                    l_protection[2]=0,
                                    l_exclusion_rate_a[4]=0/dec=3,
                                    l_exclusion_rate_b[4]=0/dec=3,
                                    l_exclusion_rate_d[4]=0/dec=3,
                                    l_line_of_business[4] ;

        Local String L_COVERAGE[1]="C" ;

        Access cppfarmcovb,
           Set cppfarmcovb:policy_NO = G_policy_NO ,
               cppfarmcovb:pol_year = g_year,
               cppfarmcovb:end_sequence = g_End_sequence,
               cppfarmcovb:PREM_NO = G_PREM_NO ,
               cppfarmcovb:BUILD_NO = G_BUILD_NO ;

        Include "STDKEYS7.INC"

style definition

        include "styles.inc"

Functions

        Include "stdfunc7.inc"

menu definition

        include "stdmenu7.inc"
}

toolbar definition

        include "stdtoolbar7.inc"
}

screen entry

Access Validation
If cppfarmcovb:policy_NO <> G_policy_NO or
   cppfarmcovb:pol_year <> g_year or
   cppfarmcovb:end_sequence <> g_end_sequence or
   cppfarmcovb:PREM_NO <> G_PREM_NO or
   cppfarmcovb:BUILD_NO <> G_BUILD_NO Then
    Error 1000 ;

screen at 1,1 to 20,80
Properties
        {
        Layouttype = column
        }
{
Panel
Properties
        {
        Borderstyle     = raised
        Scrollbarpolicy = asneeded
        }
{
