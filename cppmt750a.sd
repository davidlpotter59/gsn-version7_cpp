%%
Screen
        Name = "cppmt750a";
        Type = "Multiline" ;
        Repeat LINE_ITEMS, 10 Times ;
        Screensize = "dynamic" ;
        Highlight=Underscore ;
        Padcharacter=Space ;
        Domain="sfpEND" ;
        Windowtitle = "%a    %s Policy Wide Optional Endorsements - Ver 7.00     %m" ;
--      resizeable = yes ;
        iconline = 0 ;

        Global Unsigned Ascii Number G_policy_NO[9] ,
                                     g_year[4],
                                     g_end_sequence[4],
                                     G_PREM_NO[4] ,
                                     G_BUILD_NO[4] ,
                                     G_SUB_CODE[4] ,
                                     g_state[2] ,
                                     g_deductible[5] ;

        Global String G_CODE[7] ;

        Local Unsigned Ascii Number L_SUB_CODE[4] ,
                                    L_STATE[2],
                                    L_LINE_OF_BUSINESS[4]=0008,
                                    l_per[8]=0,
                                    l_premium[8]=0,
                                    l_rmf[6]=0/dec=4,
                                    l_rate[8]=0/dec=4 ,
                                    l_deductible[5]=0 ;

        Local String L_SCREEN[8] ,
                     L_CODE[7] ,
                     L_COMPANY_ID[10] ;

        Local Date L_EFF_DATE[8] ;

        Access sfpEND, Set sfpEND:policy_NO = G_policy_NO,
                           sfpend:pol_year = g_year,
                           sfpend:end_sequence = g_End_sequence,
                           sfpEND:PREM_NO  = 0,
                           sfpEND:BUILD_NO = 0 ;

        Include "STDKEYS7.INC"
        !F8="Append"/function ;
        !F7="Chg"/function/icon="Change" ;

Style Definition

        Include "styles.inc"

Functions

        "redisplay" Display/noreturn "cppmt750a" ;

         "add" sequence "new"  tagged add_fn ;
         "new" continue begin
                        if sfpend:policy_no <> g_policy_no then
                            function = "addnew|append"
                        else
                            function = "append"
                        end;
        "addnew" add/autoupdate ;
        append    tagged append_fn;

        "Chg" Sequence "Change|popup" tagged change_fn ;
        "popup" Continue Begin
                         Do SETSCREEN
                         G_CODE = sfpEND:CODE
                         g_deductible = sfpend:deductible
                         G_SUB_CODE = sfpEND:SUB_CODE
                         If L_SCREEN <> "" Then
                             FUNCTION = "disscn"
                         End ;
        "disscn" Display L_SCREEN ;

        Include "stdfunc7m.inc"

Menu Definition

        Include "stdmenu7.inc"

}

Toolbar Definition

        Include "stdtoolbar7m.inc"
}

screen entry
access sfpname, set sfpname:policy_no = g_policy_no,
                    sfpname:pol_year = g_year,
                    sfpname:end_sequence = g_End_sequence, exact

Access Validation
If sfpEND:policy_NO <> G_policy_NO Or
   sfpend:pol_year <> G_year or
   sfpend:end_sequence <> g_End_sequence or
   sfpEND:PREM_NO  <> 0 Or
   sfpEND:BUILD_NO <> 0 Then
    Error 1000

Skip If sfpEND:LOB_END_CODE <> "I" ;

screen
{
