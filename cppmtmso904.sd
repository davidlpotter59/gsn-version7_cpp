                              "AXIS INSURANCE COMPANY",
                              "GENERAL SECURITY NATIONAL INSURANCE COMPANY";

401     cppUMDETAIL:POLICY_NUMBER/uppercase ;
402     cppUMDETAIL:POLICY_NUMBER_MISC/uppercase ;
501     cppUMDETAIL:EFF_DATE;
